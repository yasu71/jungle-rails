<section>

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="col-xs-4">
    <%= form_tag '/login' do %>

      <div class="form-group">
        <label>Email: </label>
        <%= text_field_tag :email %>
      </div>
      <div class="form-group">
        <label>Password: </label> 
        <%= password_field_tag :password %>
      </div>

      <%= submit_tag "Submit", class:"btn btn-info" %>

    <% end %>
  </div>

</section>