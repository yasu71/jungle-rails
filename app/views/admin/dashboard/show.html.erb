<article>

  <header class="page-header">
    <h1 class="mb-1">Admin Dashboard</h1>
  </header>

  <section class="panel panel-default items ">
    <table class="table table-bordered ">
      <thead>
        <tr>
          <th class="text-center">Total Categories</th>
          <th class="text-center">Total Products</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="text-center"><%= @products_count %></td>
          <td class="text-center"><%= @categories_count %></td>
        </tr>
      </tbody>
    </table>
  </section>

  <footer>
    <h4><%= link_to 'A List of Products >',  [:admin, :products] %></h4>
  </footer>

</article>